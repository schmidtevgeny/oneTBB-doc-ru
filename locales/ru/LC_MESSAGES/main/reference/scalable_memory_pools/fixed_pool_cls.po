"    namespace tbb {\n"
"        class fixed_pool {\n"
"        public:\n"
"            fixed_pool(void *buffer, size_t size);\n"
"            fixed_pool(const fixed_pool& other) = delete;\n"
"            fixed_pool& operator=(const fixed_pool& other) = delete;\n"
"            ~fixed_pool();\n"
"\n"
"            void recycle();\n"
"            void* malloc(size_t size);\n"
